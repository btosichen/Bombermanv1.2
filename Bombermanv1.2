    <style>
        :root {
            --bg-color: #202028;
            --ui-bg: #333344;
            --text-color: #ffffff;
            --accent: #ffcc00;
            --danger: #ff4444;
            --success: #44ff44;
        }

        body {
            margin: 0;
            padding: 0;
            background-color: var(--bg-color);
            color: var(--text-color);
            font-family: 'Courier New', Courier, monospace;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
            user-select: none;
            overscroll-behavior: none;
        }

        /* Container adapts to screen size while keeping aspect ratio */
        #game-container {
            position: relative;
            background-color: #359e35;
            box-shadow: 0 0 50px rgba(0,0,0,0.8);
            
            /* Desktop Default */
            width: auto;
            height: 90vh;
            aspect-ratio: 13/11;
            border: 4px solid #444;
        }

        /* Mobile Adjustment: Fill screen better */
        @media (max-width: 900px) {
            #game-container {
                border: none;
                height: 100vh; /* Try to fill height */
                width: auto;
                max-width: 100%;
                aspect-ratio: 13/11;
            }
        }

        canvas {
            display: block;
            image-rendering: pixelated;
            width: 100%;
            height: 100%;
        }

        /* UI Overlay Styles */
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 20; /* Above game but below controls if needed */
            text-align: center;
        }

        .hidden {
            display: none !important;
        }

        h1 {
            font-size: 3rem;
            color: var(--accent);
            text-shadow: 4px 4px #000;
            margin-bottom: 10px;
        }
        
        @media (max-width: 600px) {
            h1 { font-size: 2rem; }
