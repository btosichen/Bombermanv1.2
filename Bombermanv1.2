                    } else if (p.type === 'speed') {
                        this.ctx.fillStyle = 'cyan';
                        this.ctx.fill();
                        this.ctx.fillStyle = 'black';
                        this.ctx.fillText('‚ö°', x-8, y+5);
                    } else if (p.type === 'bomb') {
