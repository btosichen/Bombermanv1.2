            border: 2px solid #fff;
            padding: 12px 25px;
            font-size: 1.1rem;
            margin: 8px;
            cursor: pointer;
            font-family: inherit;
            transition: transform 0.1s, background 0.2s;
            min-width: 200px;
            -webkit-tap-highlight-color: transparent;
        }

        .btn:active { transform: scale(0.95); }

        .btn:hover {
            background: #555566;
            border-color: var(--accent);
            color: var(--accent);
        }

        .btn-small {
            padding: 5px 15px;
            font-size: 0.9rem;
            min-width: auto;
            margin: 5px;
        }

        /* Settings Section */
        .settings-box {
            background: rgba(255,255,255,0.1);
            padding: 10px;
            border-radius: 8px;
            margin: 10px 0;
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .setting-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 280px;
        }
        
        @media (max-width: 400px) {
            .setting-row { width: 100%; }
        }

        /* Toggle Switch */
        .toggle-btn {
            background: #555;
            border: 1px solid #888;
            color: #bbb;
        }
        .toggle-btn.active {
            background: var(--accent);
            color: #000;
            border-color: #fff;
            font-weight: bold;
        }

        /* Editor Styles */
        #editor-ui {
            z-index: 30;
            background: rgba(0,0,0,0.98);
        }

        #editor-grid {
            display: grid;
            grid-template-columns: repeat(13, 1fr);
            grid-template-rows: repeat(11, 1fr);
            gap: 1px;
            background: #222;
            padding: 5px;
            border: 2px solid #666;
