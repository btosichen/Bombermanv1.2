                        this.ctx.fill();
                        this.ctx.fillStyle = 'white';
                        this.ctx.fillText('üí£', x-8, y+5);
                    }
                });

                this.bombs.forEach(b => {
                    const x = b.c * TILE_SIZE + TILE_SIZE/2;
